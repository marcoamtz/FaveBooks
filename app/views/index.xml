<Alloy>
	<Collection src="books"/>
	<Window class="container" fullscreen="true" title="My Books">
		<Menu id="menu" platform="android">
	    	<MenuItem 
	    		id="addBook"
	        	title="Add book"
	        	showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM"
	        />
		</Menu>
		<ListView id="itemList">
			<ListSection dataCollection="books">
				<ListItem title="{title}" author="{author}"></ListItem>
			</ListSection>
		</ListView>
	</Window>
</Alloy>